            <layers/>
        </repo>
    </repos>

    <local-conf>
        <line>DISTRO_FEATURES:append = " virtualization"</line>
        <line>ARAGO_BRAND = "foundational_sdk"</line>
    </local-conf>

    <tools>
        <tool type='oe-layersetup'>
            <var name='BITBAKE_INCLUSIVE_VARS' value='yes'/>
        </tool>
    </tools>
</config>
